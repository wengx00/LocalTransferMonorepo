{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/renderer/src/**/*.ts",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@pages/*": [
        "src/renderer/src/pages/*"
      ],
      "@utils/*": [
        "src/renderer/src/utils/*"
      ],
      "@assets/*": [
        "src/renderer/src/assets/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  }
}
